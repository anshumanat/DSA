class Solution {
  public:
    // Function to check if a string is a palindrome.
    bool isPalindrome(string& s) {
        // code here
        int n = s.size()-1;
        int i = 0;
        
        while(i<n){
            if(s[i] !=s[n]){
                return false;
            }
            i++;
            n--;
        }
        return true;
    }
};
